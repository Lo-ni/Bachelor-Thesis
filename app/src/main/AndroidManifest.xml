<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.asta.hochschule.trier.verleih">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity android:name=".app.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activity.MainActivity"
            android:configChanges="uiMode"
            android:launchMode="singleTop" />
        <activity android:name=".signIn.activity.SignInActivity" />
        <activity
            android:name=".rental.view.NewRentalActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".rental.view.EditRentalActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>